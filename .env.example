# Global (renderer/web/api)
CONTENT_DIR=/content
MUSIC_DIR=/content/audio/music
OUTPUT_DIR=/output
TMP_DIR=/tmp/renderer
LOG_LEVEL=info
JSON_LOGS=true
DEBUG=false
JOB_TIMEOUT_SEC=900
MAX_CONCURRENT=2
POLL_INTERVAL_MS=5000
LEASE_SECONDS=180

# API access
API_BASE_URL=https://api.example.com
API_AUTH_TOKEN=

# ElevenLabs TTS
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=
ELEVENLABS_MODEL_ID=eleven_multilingual_v2
TTS_CACHE_DIR=/content/tts_cache
TTS_RATE_LIMIT_RPS=3

# Whisper ASR
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
SUBTITLES_FORMAT=srt
SUBTITLES_BURN_IN=false

# Web (Next.js)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
ADMIN_API_TOKEN=
